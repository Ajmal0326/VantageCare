# Resolve react_native_pods.rb with node (RN 0.73+)
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, '15.6'

# Required on RN 0.73+ when using react_native_pods.rb
prepare_react_native_project!

# If you rely on Swift pods and want static frameworks:
use_frameworks! :linkage => :static

target 'VantageCareApp' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => true,
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # Add any extra RNFirebase pods here if you use them (they auto-install via autolinking):
  # pod 'Firebase/CoreOnly'  # not needed when using @react-native-firebase/app

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
    )

    # --- Uniform build settings for all Pods ---
    installer.pods_project.targets.each do |t|
      t.build_configurations.each do |cfg|
        cfg.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.6'
        cfg.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        cfg.build_settings['SWIFT_VERSION'] = '5.0'
        # Fix "non-modular-include-in-framework-module"
        cfg.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      end
    end

    # --- Also force the APP project's targets to 15.6 ---
    installer.aggregate_targets.each do |agg|
      agg.user_project.native_targets.each do |t|
        t.build_configurations.each do |cfg|
          cfg.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.6'
        end
      end
      agg.user_project.save
    end
  end
end
